<Window x:Class="HotelApp_net8.AddRoomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp_net8"
        mc:Ignorable="d"
        Title="Добавить постояльца" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/hotelIcon.png">
    <StackPanel>
        <TextBlock x:Name="lntb" Text="Фамилия" Margin="5"/>
        <TextBox x:Name="lastnameTb" Margin="5"/>
        <TextBlock x:Name="fntb" Text="Имя" Margin="5"/>
        <TextBox x:Name="firstnameTb" Margin="5"/>
        <TextBlock x:Name="pttb"  Text="Отчество" Margin="5"/>
        <TextBox x:Name="patronycTb" Margin="5"/>
        <TextBlock x:Name="phtb" Text="Телефон" Margin="5"/>
        <TextBox x:Name="phoneTb" Margin="5"/>
        <TextBlock x:Name="psptb" Text="Паспорт" Margin="5"/>
        <TextBox x:Name="passportTb" Margin="5"/>
        <TextBlock x:Name="rmtb" Text="Номер комнаты" Margin="5"/>
        <ComboBox x:Name="roomsBox" Margin="5"/>
        <Button x:Name="addbtn" Content="добавить"
                Style="{StaticResource Buttonsssss}"
                Width="200"
                Height="40"
                Margin="20" Click="addbtn_Click"/>
    </StackPanel>
</Window>
