<Page x:Class="HotelApp.Pages.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="RoomsPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="Pageheader" 
                   Text="Номера" 
                   Style="{StaticResource HeadersPages}"/>

        <Grid Grid.Row="1" Background="#A286C0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="№ комнаты"
                       Style="{StaticResource TablesHeaders}"/>

            <TextBlock Text="Тип комнаты"
                       Grid.Column="1"
           Style="{StaticResource TablesHeaders}"/>

            <TextBlock Text="Количесвто спальных мест"
                       TextWrapping="Wrap"
            Grid.Column="2"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="Стоимость"
            Grid.Column="3"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="Состояние"
            Grid.Column="4"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="ID ключ-карты"
            Grid.Column="5"
Style="{StaticResource TablesHeaders}"/>
        </Grid>

        <ListBox x:Name="RoomsLb"
                 Grid.Row="2"
                 VerticalAlignment="Top"
                 Height="500">


            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="roomnum" 
                                   Text="{Binding NumRoom}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Grid.Column="0"
                                   FontSize="14"
                                   Margin="5"/>
                        
                        <TextBlock x:Name="roomtype" 
                                   Grid.Column="1"
                                    HorizontalAlignment="Center"
                                   FontSize="14"
           Text="{Binding TypeRoom}"
           Margin="5"/>
                        <TextBlock x:Name="roomcount" 
                                    HorizontalAlignment="Center"
                                   FontSize="14"
           Text="{Binding Bed}"
                                   Grid.Column="2"
           Margin="5"/>
                        <TextBlock x:Name="roomcost" 
                                    HorizontalAlignment="Center"
                                   FontSize="14"
                                   Grid.Column="3"
           Text="{Binding Cost}"
           Margin="5"/>
                        <TextBlock x:Name="roomstatus" 
                                    HorizontalAlignment="Center"
                                   FontSize="14"
                                   Grid.Column="4"
           Text="{Binding Status}"
           Margin="5"/>
                        <TextBlock x:Name="roomcard" 
                                    HorizontalAlignment="Center"
                                   FontSize="14"
                                   Grid.Column="5"
Text="{Binding IdKey}"
Margin="5"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</Page>
