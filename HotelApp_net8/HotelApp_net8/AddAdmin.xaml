<Window x:Class="HotelApp_net8.AddAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp_net8"
        mc:Ignorable="d"
       Title="Добавить админа" Height="300" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/hotelIcon.png">
    <StackPanel>
        <TextBlock Text="ФИО" 
                   Margin="10"
                   FontSize="20"/>

        <TextBox x:Name="fioBox"
                 Height="40"
                 FontSize="20"
                 Margin="10"/>

        <TextBlock Margin="10"
                   Text="Номер журнала"
                   FontSize="20"/>
        <ComboBox x:Name="numjournal"
                  Margin="10"/>

        <Button x:Name="addbtn"
                Margin="10"
                Content="добавить"
                Style="{StaticResource Buttonsssss}"
                Height="30"
                Width="200" Click="addbtn_Click"/>
    </StackPanel>
</Window>
