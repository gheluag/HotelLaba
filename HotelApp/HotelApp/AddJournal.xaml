<Window x:Class="HotelApp.AddJournal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp"
        mc:Ignorable="d"
        Title="AddJournal" Height="500" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <!-- Выбор постояльца -->
        <TextBlock Text="Постоялец:" 
                   FontSize="16"
                   Margin="0,10,0,5"/>
        <ComboBox x:Name="roomerBox"
                  DisplayMemberPath="FullName"
                  SelectedValuePath="IdRoomer"
                  FontSize="16"
                  Margin="0,0,0,10"/>

        <TextBlock Text="Номер комнаты:" 
                   FontSize="16"
                   Margin="0,10,0,5"/>
        <ComboBox x:Name="roomBox"
                  DisplayMemberPath="NumRoom"
                  SelectedValuePath="NumRoom"
                  FontSize="16"
                  Margin="0,0,0,10"/>

        <TextBlock Text="Дата заезда:" 
                   FontSize="16"
                   Margin="0,10,0,5"/>
        <DatePicker x:Name="entryDatePicker"
                    FontSize="16"
                    Margin="0,0,0,10"/>

        <TextBlock Text="Дата выезда:" 
                   FontSize="16"
                   Margin="0,10,0,5"/>
        <DatePicker x:Name="departureDatePicker"
                    FontSize="16"
                    Margin="0,0,0,10"/>

        <Button x:Name="addBtn"
                Content="Добавить"
                FontSize="16"
                Style="{StaticResource Buttonsssss}"
                Height="40"
                Width="200"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="addBtn_Click"/>
    </StackPanel>
</Window>
