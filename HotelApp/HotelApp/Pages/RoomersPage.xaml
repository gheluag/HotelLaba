<Page x:Class="HotelApp.Pages.RoomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="RoomersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Pageheader" 
           Text="Постояльцы" 
           Style="{StaticResource HeadersPages}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="searchBox"
                     Grid.Column="1"
                     Width="400"
                     Height="30"/>

            <Button x:Name="findBtn" Content="Найти" 
                    Grid.Column="2"
                    Style="{StaticResource Buttonsssss}"
                    Width="100"
                    Height="30" Click="findBtn_Click"/>

        </Grid>

        <Grid Grid.Row="2" Background="#A286C0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="57"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            

            <TextBlock Text="Номер комнаты"
                       TextWrapping="Wrap"
                       Style="{StaticResource TablesHeaders}"/>

            <TextBlock Text="Фамилия"
                       Grid.Column="1"
           Style="{StaticResource TablesHeaders}"/>

            <TextBlock Text="Имя"
                       TextWrapping="Wrap"
            Grid.Column="2"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="Отчество"
            Grid.Column="3"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="Паспорт"
            Grid.Column="4"
Style="{StaticResource TablesHeaders}"/>
            <TextBlock Text="Номер телефона"
            Grid.Column="5"
Style="{StaticResource TablesHeaders}"/>
        </Grid>

        <ListBox x:Name="roomersLB"
                 Grid.Row="3">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                        <TextBlock x:Name="numroom" 
                                   Grid.Column="0"
                                   Text="{Binding RoomNum}"
                                   Style="{StaticResource TablesRows}"/>
                        
                        <TextBlock x:Name="lastname" 
           Grid.Column="1"
           Text="{Binding Surname}"
           Style="{StaticResource TablesRows}"/>
                        
                        <TextBlock x:Name="firstname" 
           Grid.Column="2"
           Text="{Binding FirstName}"
           Style="{StaticResource TablesRows}"/>
                        
                        <TextBlock x:Name="patronym" 
           Grid.Column="3"
           Text="{Binding Patronymic}"
           Style="{StaticResource TablesRows}"/>
                        
                        <TextBlock x:Name="passport" 
           Grid.Column="4"
           Text="{Binding Passport}"
           Style="{StaticResource TablesRows}"/>

                        <TextBlock x:Name="phone" 
Grid.Column="5"
Text="{Binding Phone}"
Style="{StaticResource TablesRows}"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel 
            HorizontalAlignment="Center"
            Grid.Row="4"
            Orientation="Horizontal">

            <Button x:Name="addRoomer"
                    Content="Добавить"
                    Style="{StaticResource Buttonsssss}"
                    Width="100"
                    Height="40"
                    Margin="10" Click="addRoomer_Click"/>

            <Button x:Name="updateRoomer"
                    Click="editBtn_Click"
        Content="Обновить"
        Style="{StaticResource Buttonsssss}"
        Width="100"
        Height="40"
        Margin="10"/>

            <Button x:Name="delRoomer"
Content="Выселить"
Style="{StaticResource Buttonsssss}"
Width="100"
Height="40"
Margin="10" Click="delRoomer_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
